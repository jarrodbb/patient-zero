<div class='container'>
  <h2>Welcome, Doctor {{doctor.name}}!</h2>
  <h2>Here are the medical certificate requests for {{name}}</h2>
  <h3>Medical Certificate Requests:</h3>

  {{#if medical_certificates.length}}
    <div class='col-md-6 project-list'>
      <h3>Medical Certificate Requests:</h3>

      {{#each medical_certificates as |medCert|}}
        <div class='row mb-2'>
          <div class='col-md-8'>
            <h4>{{medCert.reason}}</h4>
          </div>
          <div class='col-md-4'>
            <button
              class='btn btn-sm btn-danger'
              data-id='{{project.id}}'
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}

</div>