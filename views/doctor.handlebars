<div class="container">
  <h2>Welcome, Doctor {{doctor.name}}!</h2>
  <h3>Medical Certificate Requests:</h3>

  {{#each patient as |patient| }}
    <div class="row mb-4 project">
      <div class="col-md-5">
        <h1>
          <a href="/patient/">{{patient.name}}</a>
        </h1>
        <p>Requested by {{patient.name}} on {{format_date patient.request_date}}</p>
      </div>
      <div class="col-md-7">
        <p>
          {{patient.request_description}}
        </p>
      </div>
    </div>
  {{/each}}
</div>
