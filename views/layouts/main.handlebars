    </a>
    
    <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
      <!-- Conditionally render login or logout links -->
          {{#if logged_in}}

            <a href='/profile' class="mr-5 hover:text-gray-900">profile</a>
            {{!-- <a href='/patient-certificate' class="mr-5 hover:text-gray-900">certificate</a> --}}

            <button class='no-button' id='logout'>logout</button>
            {{else}}
            
            <a href='/doctor-login' class="mr-5 hover:text-gray-900">Doctor Login</a>
            <a href='/patient-login' class="mr-5 hover:text-gray-900">Patient Login</a>

          {{/if}}
    </nav>
  </div>
</header>

<body>
    <main class="container container-fluid mt-5">
    <!-- Render the sub layout -->
    {{#if doctor}}
    <!-- Render doctor's dashboard -->
      {{> doctor}}
    {{else}}
    <!-- Render default content (e.g., homepage) -->
      {{{ body }}}
    {{/if}}
  </main>

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
    <script src='/js/logout.js'></script>
  {{/if}}
</body>

